<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="10dp"

    android:background="#F5F5F5"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0288D1"
        android:padding="20dp"
        android:elevation="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_pantalla"
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />
    </RelativeLayout>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">

    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:background="#F2F5A9"
            />
    </TableRow>

    <!-- Row 3 with 2 columns -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/item2" android:text=""
            android:layout_weight="0.5"  android:background="#FFFF00" android:textColor="#000000"
            android:padding="18dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item3" android:text=""
            android:layout_weight="4" android:background="#FE642E"
            android:layout_height="wrap_content"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:padding="18dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/item4"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="10dp" android:text=""  android:layout_span="3"
            android:padding="18dip" android:background="#0B4C5F"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />
    </TableRow>
    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/item6"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:textSize="10dp" android:text=""  android:layout_span="3"
            android:padding="18dip" android:background="#04B4AE"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>
</LinearLayout>