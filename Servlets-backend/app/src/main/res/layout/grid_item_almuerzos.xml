<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">
    <ImageView
        android:id="@+id/item0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:background="#F2F5A9"
        />
    <!-- Row 3 with 2 columns -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Tipo:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="3dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/item1" android:text=""
            android:layout_weight="2" android:background="#81F7F3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="7dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Principal:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="3dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/item2" android:text=""
            android:layout_weight="1" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="7dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic"
            android:layout_width="200dp" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Secundario:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="3dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/item3" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="7dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Bebida:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="3dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/item4" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="7dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Postre:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="3dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/item5" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="7dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Precio $:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="3dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/item6" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="7dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_weight="1"
            android:textColor="#000000"
            android:padding="3dip" android:gravity="center"
            android:background="@color/accent_material_light" />
    </TableRow>
</TableLayout>