<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">
    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Principal:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="4dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold" />
    </TableRow>
    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/item1"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="10dp" android:text=""  android:layout_span="3"
            android:padding="12dip" android:background="#F4FA58"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Secundario:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="4dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold" />
    </TableRow>
    <!-- Row 3 with 2 columns -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/item2" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="12dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Bebida:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="4dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/item4" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="12dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Postre:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="4dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold" />
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/item3" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="12dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <TextView
            android:text="Precio $:"
            android:layout_weight="1"  android:background="#81F781" android:textColor="#000000"
            android:padding="4dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="bold" />
    </TableRow>
    <!-- Row 2 with 3 columns -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/item5" android:text=""
            android:layout_weight="3" android:background="#F4FA58"
            android:textColor="#000000"
            android:padding="12dip" android:gravity="center"
            android:textSize="10dp"
            android:textStyle="italic" />
    </TableRow>

</TableLayout>